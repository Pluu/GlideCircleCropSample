<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSample1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="circleCrop()"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="optionalCircleCrop()"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sample1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#1E88E5" />

    <ImageView
        android:id="@+id/sample1_modify"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#FDD835" />

    <ImageView
        android:id="@+id/sample2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#1E88E5" />

    <ImageView
        android:id="@+id/sample2_modify"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#FDD835" />

    <ImageView
        android:id="@+id/sample3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#1E88E5" />

    <ImageView
        android:id="@+id/sample3_modify"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="#FDD835" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="tvSample1,tvSample2,sample1,sample1_modify,sample2,sample2_modify,sample3,sample3_modify"
        app:flow_firstVerticalStyle="packed"
        app:flow_maxElementsWrap="2"
        app:flow_verticalAlign="top"
        app:flow_verticalGap="10dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>